/tracking/verbose 0
/run/verbose 1
/run/printProgress 100000


/run/initialize




######################################################
### PART TO SIMULATE PARTICLE WITH GPS (no setgun) ###
######################################################
/gps/number 1
/gps/particle e-
/gps/pos/type Point
/gps/pos/centre 0.0 0.0 -300.0 mm
/gps/ang/type cos
/gps/ang/rot1 -1 0 0
/gps/ang/maxtheta 0.09 rad

/gps/ene/type Exp
/gps/ene/min 10 keV
/gps/ene/max 100. MeV
/gps/ene/ezero 5 MeV